<Window x:Class="HotelRezerwacje.ManagerIdCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelRezerwacje"
        mc:Ignorable="d"
        Icon="/Obrazy/SmartHome.png"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Identyfikacja" Height="180" Width="400">
    <Border Padding="10">
        <StackPanel>
            <TextBlock Margin="0 10" Text="Podaj Numer Identyfikacyjny:"/>
            <TextBox x:Name="IdText" Padding="2" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Name="AcceptButton" Click="AcceptButton_Click" Content="Dalej" Grid.Column="0" Margin="50 20" />
                <Button x:Name="CancleButton" Click="CancleButton_Click" Content="Anuluj" Grid.Column="1" Margin="50 20" />
            </Grid>
        </StackPanel>
    </Border>
</Window>
